<h1 class="title">Create a new Tinstagram Post</h1>

<%= form_for @post_this do |post_form| %>
<div class="field">
  <div class="control">
    <input class="input is-danger" placeholder="Title" <%= post_form.text_field :title %> 
  </div>
</div>


<div class="field">
  <div class="control">
    <textarea class="textarea is-danger" placeholder="Caption"></textarea>
  </div>
</div>


    <%# Caption: <%= post_form.text_field :caption %>

    <%# Upload Image: <%= post_form.image :picture %>

<div class="field">
  <div class="file is-danger">
    <label class="file-label">
      <input class="file-input" type="file" name="resume">
      <span class="file-cta">
        <span class="file-icon">
          <i class="fas fa-upload"></i>
        </span>
        <span class="file-label">
        Choose image....
        </span>
      </span>
    </label>
  </div>
</div>

<input class="button is-danger is-light" type="submit" value="Create Post" <%= post_form.submit %>
   
<% end %>


